<configuration debug="true" scan="true" scanPeriod="10 seconds">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%date{yyy-MM-dd HH:mm:ss z, UTC} [%thread] %-5level
                %logger{5} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.rubiconproject.dt.veresk.application" level="DEBUG" />

</configuration>
